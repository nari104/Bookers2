<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :name, class: 'form-control book_title' %>
      </div>
      <div class="form-group">
        <%= f.label :opinion %>
        <%= f.text_area :opinion, class: 'form-control book_opinion' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
      <div>
        <span class="link"><%=link_to "Show", book_path(@book.id) %></span>
        |
        <span><%= link_to "Back", books_path %></span>
      </div>
      <% end %>
    </div>
  </div>
</div>