<h1>投稿一覧</h1>
<%= @books.each do |book| %>

  <p>タイトル</p>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>

  <p>画像</p>

  <% if book.image.attached? %>
    <%= image_tag book.image,size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

<% end %>