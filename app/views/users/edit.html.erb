<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control user_name' %>
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, class: 'form-control-file user_image' %>
        </div>
        <div class="form-group">
          <%= f.label :Introduction  %>
          <%= f.text_field :introduction, class="form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>